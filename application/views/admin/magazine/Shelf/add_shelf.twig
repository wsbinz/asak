{% extends "admin/include/include.twig" %}

{% block add %}


    <div class="container theme-showcase" role="main"><br/>
        <div class="jumbotron">
            <h2>Dodawnie półek</h2>
        </div>
        <form method="post" action ="{{ base_url() }}admin/shelf/add_shelf">


            <label for="">Regał</label>

            <select class="form-control" id="sel1" name="shelf" >
                {%  for stor_shelves in shel_result	 %}
                    {#	STOR_SHELVES#}
                    <option value="{{stor_shelves.shel_result|trim(" ","right")}}">{{ stor_shelves.shel_result|trim(" ","right") }}</option>
                {% endfor %}
            </select>
            <br/>

            <label for="">Ilość półek w regale do wygenerowania</label><br/>
            <input type="text" class="form-control" name="count" value="{{ post_1 }}" placeholder="0 - 100"><br/>

            {#<label for="">Maksymalna wysokość regałów</label><br/>#}
            {#<input type="text" class="form-control" name="highRack" value="{{ post_2 }}" placeholder="0"><br/>#}



            <button type="submit" class="btn btn-lg btn-default " >Dodaj</button>


        </form>

        <br/>

        <form method="post" action ="{{ base_url() }}admin/magazine/">
            <button type="submit" class="btn btn-lg btn-default " >Wróć</button>
        </form>

        <br/>

        {{ validation|raw }}<br/>

    </div>



{% endblock %}