{% extends "admin/include/include.twig" %}

{% block add %}


    <div class="container theme-showcase" role="main"><br/>
        <div class="jumbotron">
            <h2>Dodawnie regału</h2>
        </div>
        <form method="post" action ="{{ base_url() }}admin/rack/add_rack">


                        <label for="">Magazyn</label>

            <select class="form-control" id="sel1" name="storage" >
            {%  for storage in load_group %}
                <option value="{{storage.load_group|trim(" ","right")}}">{{ storage.load_group|trim(" ","right") }}</option>
            {% endfor %}
            </select>
            <br/>

            <label for="">Ilość regałów do wygenerowania</label><br/>
            <input type="text" class="form-control" name="count" value="{{ post_1 }}" placeholder="0 - 100"><br/>

            <label for="">Maksymalna wysokość regałów</label><br/>
            <input type="text" class="form-control" name="highRack" value="{{ post_2 }}" placeholder="0 - 99999 [mm]"><br/>

            <label for="">Szerokość regałów</label><br/>
            <input type="text" class="form-control" name="widthRack" value="{{ post_3 }}" placeholder="0 - 99999 [mm]"><br/>

            <label for="">Długość regałów</label><br/>
            <input type="text" class="form-control" name="lengthRack" value="{{ post_4 }}" placeholder="0 - 99999 [mm]"><br/>


            <button type="submit" class="btn btn-lg btn-default " >Dodaj</button>


        </form>

        <br/>

        <form method="post" action ="{{ base_url() }}admin/magazine/">
            <button type="submit" class="btn btn-lg btn-default " >Wróć</button>
        </form>

        <br/>

        {{ validation|raw }}<br/>

    </div>



{% endblock %}