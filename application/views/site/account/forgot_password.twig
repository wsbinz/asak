

<!-- Bootstrap core CSS -->
<link rel="stylesheet" href="{{ base_url() }}/asset/css/bootstrap.css" crossorigin="anonymous">
<!-- nasza nakładka CSS -->
<link rel="stylesheet" href="{{ base_url() }}/asset/css/theme.css" crossorigin="anonymous">



<div class ="container">
    <form class="form-signin" action="{{ base_url() }}account/forgot_password" method="POST" id="add_user">

        <h2 class="h_middle">Zapomniałem hasła</h2>

        <div class="form-group">
            <label for="email" class="form-signin-heading">Adres e-mail</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
        </div>

        <div class="checkbox">
            {% autoescape %}
                {{ validation|raw }}
            {% endautoescape %}

        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Wyślij</button>

    </form>
</div>
