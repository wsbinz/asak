

<!-- Bootstrap core CSS -->
<link rel="stylesheet" href="{{ base_url() }}/asset/css/bootstrap.css" crossorigin="anonymous">
<!-- nasza nakładka CSS -->
<link rel="stylesheet" href="{{ base_url() }}/asset/css/theme.css" crossorigin="anonymous">



<div class ="container">
    <form class="form-signin" action="{{ base_url() }}account/reset_password/{{ code }}" method="POST" id="add_user">

        <h2 class="h_middle">Reset hasła</h2>

        <div class="form-group">
            <label for="password" class="form-signin-heading">Hasło</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Hasło">
        </div>
        <div class="form-group">
            <label for="password" class="form-signin-heading">Powtórz Hasło</label>
            <input type="password" class="form-control" id="password" name="password_retry" placeholder="Hasło">
        </div>

        <div class="checkbox">
            {% autoescape %}
                {{ validation|raw }}
            {% endautoescape %}
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Wyślij</button>

    </form>
</div>
