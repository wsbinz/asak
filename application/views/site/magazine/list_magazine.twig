{% extends "admin/include/include.twig" %}
{% block add %}


<br/>
    <div class="container theme-showcase" role="main">

        <div class="jumbotron">
            <h2>Wyswietlanie magazynów</h2> <!--do wladowania numer produktu -->
        </div>


        <table class="table table-hover">
            <thead>
            <tr>
                <th>Numer:</th>
                <th>Oznaczenie Magazynu:</th>
                <th>Dluga nazwa:</th>
                <th><th>
